<div class="span-24 backwhite shadow">
<br />
<%= form_for @user do |f| %>
<fieldset>
	<legend>Profile for [<%= @user.name %>]</legend>
	<p>
		<%= f.label :email %> <br />
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password %> <br />
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %> <br />
		<%= f.password_field :password_confirmation %>
	</p>
	<p>
		<%= f.submit "Submit", :disable_with => "..." %>
		<input name="Back" type="button" value="Back" onClick="javascript:history.go(-1);"/>
	</p>
</fieldset>
<% end %>
<script language="javascript">
$(document).ready(function() {
  $('#user_email').focus();
});
</script>
</div>
